{
  // Python analysis
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.importFormat": "absolute",
  "python.analysis.inlayHints.callArgumentNames": "partial",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.languageServerMode": "default",
  "python.analysis.typeCheckingMode": "standard",{% if include_mkdocs %}
  // YAML / MkDocs (adicionado para suporte ao mkdocs-material schema)
  "yaml.schemas": {
    "https://squidfunk.github.io/mkdocs-material/schema.json": "mkdocs.yml"
  },
  "yaml.customTags": [ 
    "!ENV scalar",
    "!ENV sequence",
    "!relative scalar",
    "tag:yaml.org,2002:python/name:material.extensions.emoji.to_svg",
    "tag:yaml.org,2002:python/name:material.extensions.emoji.twemoji",
    "tag:yaml.org,2002:python/name:pymdownx.superfences.fence_code_format",
    "tag:yaml.org,2002:python/object/apply:pymdownx.slugs.slugify mapping"
  ],{% endif %}
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.terminal.activateEnvironment": true,
  "python.terminal.focusAfterLaunch": true,
  "python.terminal.shellIntegration.enabled": true,
  "python.useEnvironmentsExtension": true,{% if include_ruff %}
  "ruff.configurationPreference": "filesystemFirst",
  "ruff.enable": true,
  "ruff.fixAll": true,
  "ruff.organizeImports": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },{% endif %}{% if include_jupyter %}
  "jupyter.askForKernelRestart": false,
  "jupyter.widgetScriptSources": [
    "unpkg.com"
  ],
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "notebook.source.organizeImports": "explicit"
  },
  "notebook.lineNumbers": "on",{% endif %}
  "files.exclude": {
    "**/.ipynb_checkpoints": true
  },
  "files.encoding": "utf8",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.aiStats.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.formatOnPaste": false,
  "editor.guides.bracketPairs": true,
  "editor.hover.enabled": true,
  "editor.snippetSuggestions": "top",
  "editor.suggestSelection": "first",{% if include_copilot %}
  "chat.agent.enabled": true,
  "chat.agent.maxRequests": 100,
  "chat.checkpoints.enabled": true,
  "chat.commandCenter.enabled": true,
  "chat.extensionTools.enabled": true,
  "chat.instructionsFilesLocations": {
    ".vscode/copilot/instructions": true
  },
  "chat.math.enabled": true,
  "chat.mcp.autostart": "newAndOutdated",
  "chat.mcp.discovery.enabled": true,
  "chat.mcp.enabled": true,
  "chat.promptFilesLocations": {
    ".vscode/copilot/prompts": true
  },
  "chat.sendElementsToChat.enabled": true,
  "chat.todoListTool.enabled": true,
  "chat.tools.useTreePicker": true,
  "github.copilot.advanced": {
    "useLanguageServer": true
  },
  "github.copilot.chat.agent.autoFix": true,
  "github.copilot.chat.agent.runTasks": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.codesearch.enabled": true{% endif %}
}
